class Solution {
    public int maxScore(String s) {
        int n=s.length();
        int max_score=0;
        int oneCount=0;
        for(int i=0;i<n;i++){
            if(s.charAt(i)=='1'){
                 oneCount++;
            }
        }
        int zeroCount=0;
        for(int i=0;i<n-1;i++){
            if(s.charAt(i)=='0'){
                zeroCount++;
            }else{
                oneCount--;
            }
            max_score=Math.max(max_score,oneCount+zeroCount);
        }
        return max_score;
    }
}
