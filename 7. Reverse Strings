public class Solution {
    public int reverse(int x) {
        int reversedNum = 0;
        
        // Define the 32-bit integer range limits
        int INT_MAX = 2147483647;
        int INT_MIN = -2147483648;

        while (x != 0) {
            // Get the last digit of x
            int digit = x % 10;
            // Remove the last digit from x
            x /= 10;

            // Check for overflow before adding the digit to reversedNum
            if (reversedNum > INT_MAX / 10 || (reversedNum == INT_MAX / 10 && digit > 7)) {
                return 0; // Overflow
            }
            if (reversedNum < INT_MIN / 10 || (reversedNum == INT_MIN / 10 && digit < -8)) {
                return 0; // Underflow
            }

            // Add the digit to the reversed number
            reversedNum = reversedNum * 10 + digit;
        }

        return reversedNum;
    }
}
