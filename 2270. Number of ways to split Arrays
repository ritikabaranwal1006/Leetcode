class Solution {
    public int waysToSplitArray(int[] nums) {
        if(nums.length < 2){
            return 0;
        }
        long totalsum=0;
        for(int i=0;i<nums.length;i++){
            totalsum+=nums[i];
        }
        long prefix_sum=0;
        int valid=0;
        for(int i=0;i<nums.length-1;i++){
            prefix_sum+=nums[i];
            long post_sum=totalsum-prefix_sum;
            if(prefix_sum>=post_sum){
                valid++;
            }
        } return valid;
    }
}
